{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "tdn",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [ "tdn", "toy" ],
      "kebab-case"
    ],
    "no-unnecessary-class": [
      true,
      "allow-constructor-only",
      "allow-static-only",
      "allow-empty-class"
    ]
  }
}
