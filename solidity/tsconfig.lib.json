{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "exclude": [
    "migration/**/*"
  ],
  "include": [
    "lib/**/*.ts"
  ]
}
